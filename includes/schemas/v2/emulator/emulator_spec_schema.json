{
  "$schema": "https://json-schema.org/draft/2020-12/schema",
  "type": "object",
  "title": "Root Schema",
  "required": [
    "version",
    "cores",
    "interconnect",
    "emulation_time",
    "deployment_mode"
  ],
  "$defs": {
    "metadata": {
    "type": "object",
    "title": "Object describing the raw data format on the wire",
    "required": [
      "type",
      "width",
      "signed"
    ],
    "properties": {
      "type": {
        "type": "string",
        "enum": [
          "float",
          "integer"
        ],
        "title": "type to use for the output"
      },
      "width": {
        "type": "integer",
        "title": "Size of the data on the wire"
      },
      "signed": {
        "type": "boolean",
        "title": "flag indicating whether the data is signed"
      }
    }
}
  },
  "properties": {
    "version":{
      "type": "integer",
      "title": "input file schema version"
    },
    "cores": {"$ref": "cores_schema.json"},
    "interconnect": {"$ref": "interconnect_schema.json"},
    "emulation_time": {
      "type": "number",
      "title": "Length of time to emulation_phase"
    },
    "deployment_mode": {
      "type": "boolean",
      "title": "Enable custom image deployment mode"
    }
  }
}